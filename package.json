{
  "name": "MZ_Boilerplate",
  "version": "0.1.0",
  "author": "Marzee Labs <info@marzeelabs.org>",
  "license": "GPL-3.0",
  "config": {
    "port": 1313
  },
  "browserslist": [
    "last 2 versions",
    "last 4 ios_saf versions"
  ],
  "sass-config": {
    "src": "static/images",
    "dest": "public/images",
    "quality": 80,
    "sizes": [
      {
        "suffix": "-large",
        "width": 1400
      },
      {
        "suffix": "-regular",
        "width": 820
      },
      {
        "suffix": "-medium",
        "width": 680
      },
      {
        "suffix": "-small",
        "width": 460
      }
    ]
  },
  "scripts": {
    "erase:public": "rm -Rf ./public && mkdir ./public",
    "erase:temp": "rm -Rf ./temp && mkdir ./temp",
    "sass:scss-compile": "node-sass scss/ -o temp/css --include-path ./node_modules",
    "sass:postcss": "postcss temp/css/*.css -d static/css --use autoprefixer --use cssnano",
    "build:sass": "npm-run-all -s sass:scss-compile sass:postcss",
    "build:cms": "node scripts/cms.js",
    "build:webpack": "webpack",
    "build:sharp": "node scripts/sharp.js",
    "watch:sass": "chokidar 'scss/**/*.scss' -c 'yarn build:sass'",
    "watch:cms": "chokidar 'cms/config.yml' -c 'yarn build:cms'",
    "hugo:build": "hugo",
    "hugo:serve": "hugo serve --renderToDisk -p $(node -p \"require('./package.json').config.port\")",
    "start": "export SERVE=true && npm-run-all -p erase:* && npm-run-all -p build:* watch:* hugo:serve"
    "build": "npm-run-all -p erase:* && npm-run-all -p build:* && yarn hugo:build",
  },
  "dependencies": {
    "autoprefixer": "^7.1.4",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "chalk": "^2.1.0",
    "child_process": "^1.0.2",
    "chokidar": "^1.7.0",
    "chokidar-cli": "^1.2.0",
    "cssnano": "^3.10.0",
    "find-and-replace": "^1.0.2",
    "glob": "^7.1.2",
    "jquery": "^3.2.1",
    "js-yaml": "^3.10.0",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "path": "^0.12.7",
    "postcss-cli": "^4.1.1",
    "replace-in-file": "^3.0.0-beta.2",
    "ritmo": "^0.2.0",
    "sass-mq": "^3.2.9",
    "sharp": "^0.18.4",
    "slick-carousel": "^1.7.1",
    "susy": "^2.2.12",
    "webpack": "^3.6.0"
  }
}
